@model Domain.Domain_Models.ShoppingCart

@{
    ViewData["Title"] = "Edit Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Shopping Cart</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">ShoppingCart Details</h4>
            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label">Select Customer</label>
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId">
                        <option value="">-- Select Customer --</option>
                    </select>
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                </div>
            </form>

            <div class="mt-4 text-center">
                <a asp-action="Index" class="btn btn-secondary btn-sm">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
