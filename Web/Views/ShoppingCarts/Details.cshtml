@model Domain.Domain_Models.ShoppingCart

@{
    ViewData["Title"] = "Shopping Cart Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Shopping Cart Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Shopping Cart Information</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Customer</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.Id)</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg">Edit</a>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>
