@model Domain.Domain_Models.ShoppingCart

@{
    ViewData["Title"] = "Delete Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Shopping Cart</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this shopping cart?</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Customer</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Customer.Id)</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>
