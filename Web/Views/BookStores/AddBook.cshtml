@model Domain.DTO.AddBookToBookStore

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-primary">Add Book to Bookstore</h2>
        <p class="lead">Select a book and specify the quantity to add to the bookstore.</p>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Confirm">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="BookId" class="form-label fw-bold"></label>
                        @Html.DropDownListFor(x => Model.BookId, new SelectList(Model.Books, "Id", "Title"), new { @class = "form-control" })
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label fw-bold"></label>
                        <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="BookStoreId" />
                    <div class="d-flex gap-2">
                        <input type="submit" value="Add Book" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
